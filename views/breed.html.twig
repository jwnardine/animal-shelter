<html>
<head>
    <title>Breeds!</title>
</head>
<body>
    <h1>{{ breed.getName }}</h1>

    {% if pets is not empty %}
        <p>Here are the pets:</p>
        <ul>
            {% for pet in pets %}
                <li>{{ pet.getDescription }}</li>
            {% endfor %}
        </ul>
    {% endif %}

    <h4>Add a pet</h4>

    <form action='/pets' method='post'>
        <input id="breed_id" name="breed_id" type="hidden" value="{{ breed.getId() }}">
        <label for='description'>Pet name</label>
        <input id='description' name='description' type='text'>

        <button type='submit'>Add pet!</button>
    </form>

    <p><a href='/'>Home</a></p>
</body>
</html>
